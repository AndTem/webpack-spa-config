{
  "name": "webpacky",
  "version": "1.0.0",
  "private": true,
  "description": "Webpack 5 config",
  "workspaces": [
    "packages/*",
    "packages/modules/*"
  ],
  "scripts": {
    "tsc": "../node_modules/.bin/tsc",
    "remove-build": "../node_modules/.bin/rimraf lib/*",
    "babel-transform": "../node_modules/.bin/babel lib --out-dir lib",
    "build": "npm run remove-build && npm run tsc && npm run babel-transform",
    "lint": "../node_modules/.bin/eslint --fix packages/core/src/**/*.ts",
    "lint:types": "../node_modules/.bin/tsc --noEmit",
    "tests": "../node_modules/.bin/jest",
    "linting": "npm run lint && npm run lint:types && npm run tests",
    "release": "npm run linting && npm run build && npm publish"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^3.0.9",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5",
    "ts-jest": "^27.0.4"
  }
}
